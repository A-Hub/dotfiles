#better commands
alias ls="ls -hN --color=auto --group-directories-first"
alias wget='wget --hsts-file ~/.config/wget/wget-hsts'

#git
alias gs='git status | less'

#xbps
alias xi='sudo xbps-install'
alias xq='xbps-query'
alias xr='sudo xbps-remove'


alias mocp='mocp -M ~/.config/moc/' #-T transparent-background'
alias glrun='proot -r ~/.local/share/void-glibc -b /home/'

#system power
alias poweroff='sudo poweroff'
alias reboot='sudo reboot'
alias shutdown='sudo shutdown'

#programs
alias trc='transmission-remote-cli'
alias pm='pulsemixer'
alias vis='cli-visualizer'

#Youtube
alias yv='straw-viewer --resolution=360p' 
alias yd='youtube-dl'

#dotfiles configuration alias
alias config='/usr/bin/git --git-dir=$HOME/.cfg/ --work-tree=$HOME' 
